@model Pie

<div>
    <h3>
        <a asp-controller="Pie" asp-action="DetailsTest" asp-route-id="@Model.PieId">@Model.Name</a>
    </h3>
    <p>@Model.ShortDescription</p>
    <h3>@Model.Price.ToString("c")</h3>
    <div>
        <p>
            <a asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pieId="@Model.PieId">Add To Cart</a>
        </p>
    </div>
</div>
